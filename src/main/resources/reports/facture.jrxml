<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports
              http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="facture"
              pageWidth="595"
              pageHeight="842"
              columnWidth="555"
              leftMargin="20"
              rightMargin="20"
              topMargin="20"
              bottomMargin="20"
              uuid="a3b7e0e0-1111-2222-3333-444455556666">

    <!-- 🧱 Déclaration des paramètres -->
    <parameter name="nomClient" class="java.lang.String"/>
    <parameter name="montant" class="java.lang.Double"/>
    <parameter name="typeFacture" class="java.lang.String"/>
    <parameter name="dateEmission" class="java.lang.String"/>
    <parameter name="numeroFacture" class="java.lang.String"/>
    <parameter name="nomAppartement" class="java.lang.String"/>
    <parameter name="adresseAppartement" class="java.lang.String"/>

    <!-- 🧾 Entête de la facture -->
    <title>
        <band height="100">

               <!-- 🖼️ Logo -->
        <image>
            <reportElement x="0" y="0" width="100" height="60"/>
            <imageExpression><![CDATA[$P{logoPath}]]></imageExpression>
        </image>

            <staticText>
                <reportElement x="0" y="0" width="555" height="30" uuid="title-text"/>
                <textElement textAlignment="Center">
                    <font size="18" isBold="true"/>
                </textElement>
                <text><![CDATA[FACTURE DE LOCATION]]></text>
            </staticText>

            <line>
                <reportElement x="0" y="35" width="555" height="1"/>
            </line>
        </band>
    </title>

    <!-- 🧍 Infos client et facture -->
    <pageHeader>
        <band height="120">
            <textField>
                <reportElement x="0" y="0" width="300" height="20"/>
                <textFieldExpression><![CDATA["Client : " + $P{nomClient}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="0" y="20" width="300" height="20"/>
                <textFieldExpression><![CDATA["Appartement : " + $P{nomAppartement}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="0" y="40" width="300" height="20"/>
                <textFieldExpression><![CDATA["Adresse : " + $P{adresseAppartement}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="350" y="0" width="200" height="20"/>
                <textFieldExpression><![CDATA["Numéro Facture : " + $P{numeroFacture}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="350" y="20" width="200" height="20"/>
                <textFieldExpression><![CDATA["Date : " + $P{dateEmission}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="350" y="40" width="200" height="20"/>
                <textFieldExpression><![CDATA["Type : " + $P{typeFacture}]]></textFieldExpression>
            </textField>
        </band>
    </pageHeader>

    <!-- 💰 Détails du montant -->
    <detail>
        <band height="100">
            <line>
                <reportElement x="0" y="10" width="555" height="1"/>
            </line>

            <staticText>
                <reportElement x="0" y="25" width="300" height="20"/>
                <textElement>
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[Montant à payer :]]></text>
            </staticText>

            <textField pattern="#,##0.00 FCFA">
                <reportElement x="300" y="25" width="255" height="20"/>
                <textElement textAlignment="Right">
                    <font size="12" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{montant}]]></textFieldExpression>
            </textField>
        </band>
    </detail>

    <!-- ✅ Pied de page -->
    <pageFooter>
        <band height="50">
            <line>
                <reportElement x="0" y="0" width="555" height="1"/>
            </line>
            <staticText>
                <reportElement x="0" y="10" width="555" height="20"/>
                <textElement textAlignment="Center">
                    <font size="10" isItalic="true"/>
                </textElement>
                <text><![CDATA[Merci de votre confiance !]]></text>
            </staticText>
        </band>
    </pageFooter>
</jasperReport>
